{
  "name": "Hollywood Summer Movie Analysis",
  "description": "Analyzes Hollywood summer movie news and provides summaries",
  "version": "1.0.0",
  "created_by": "Orchestra AI Agent - Variable Fix",
  "user_request": "Find the latest news articles about Hollywood and how the summer season is doing with all the films released then select the article you think is most interesting and summarize it for me",
  "steps": [
    {
      "node": "google-news-scraper",
      "inputs": {
        "api_token": "your-apify-token-here",
        "keywords": ["Hollywood summer movies", "summer box office", "movie releases", "film industry summer"],
        "max_news": 8,
        "time_period": "Last 24 hours",
        "region_code": "United States (English)",
        "extract_descriptions": true
      }
    },
    {
      "assembly": {
        "selected_article_url": {
          "action": "select_index",
          "from": "articles",
          "extract": "url",
          "index": 0,
          "description": "Select the first (most recent) Hollywood summer movie article"
        }
      },
      "source": "google-news-scraper",
      "name": "article_selector",
      "description": "Select the most recent Hollywood summer movie article for detailed analysis"
    },
    {
      "node": "article-page-scraper",
      "inputs": {
        "url": "{{article_selector.selected_article_url}}",
        "output_filename": "hollywood_summer_article.html",
        "headless": true,
        "wait_time": 3000
      }
    },
    {
      "assembly": {
        "clean_article_text": {
          "action": "extract",
          "from": "article_text"
        }
      },
      "source": "article-page-scraper",
      "name": "text_extractor",
      "description": "Extract clean article text for AI processing"
    },
    {
      "node": "article-processor",
      "inputs": {
        "article_text": "{{text_extractor.clean_article_text}}",
        "openrouter_api_key": "your-openrouter-key-here",
        "model": "qwen/qwen3-coder:free",
        "max_tokens": 600,
        "temperature": 0.3
      }
    }
  ]
}